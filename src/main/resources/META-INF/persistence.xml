<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="AssurancePU" transaction-type="RESOURCE_LOCAL">

        <!-- Fournisseur JPA (Hibernate ici) -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Classes entités -->
        <class>com.project.model.Beneficiaire</class>
        <class>com.project.model.Cotisation</class>
        <class>com.project.model.Remboursement</class>
        <class>com.project.model.Utilisateur</class>

        <properties>
            <!-- Connexion à la base de données -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/assurance_db?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true"/>
            <property name="jakarta.persistence.jdbc.user" value="tpuser"/>
            <property name="jakarta.persistence.jdbc.password" value="tp123"/>

            <!-- Dialecte Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

            <!-- Création automatique des tables -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Afficher les requêtes SQL dans la console -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
